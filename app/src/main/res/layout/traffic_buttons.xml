<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/trafficLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/incidentButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_weight="1"
            android:background="@drawable/ic_current_position_color"
            android:onClick="showIncident"
            android:text="Incident"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/flowButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_weight="1"
            android:background="@drawable/ic_current_position_color"
            android:onClick="showFlow"
            android:text="Flow"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/noTrafficButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="24dp"
            android:layout_weight="1"
            android:background="@android:drawable/ic_delete"
            android:onClick="hideTraffic"
            android:text="No Traffic"
            android:textColor="?android:attr/statusBarColor" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>